import { useEffect, useState } from "react";
import { supabase } from "../supabaseClient";
import { useNavigate } from "react-router-dom";
import { useRoleBasedRedirect } from "../utils/roleBasedRedirect";
import NavbarNew from "../components/NavbarNew";
import { FiCalendar, FiTruck, FiImage } from "react-icons/fi";

export default function WashHistory() {
  const navigate = useNavigate();
  const [user, setUser] = useState(null);
  const [washHistory, setWashHistory] = useState([]);
  const [loading, setLoading] = useState(true);
  const [selectedCar, setSelectedCar] = useState(null);
  const [cars, setCars] = useState([]);
  const [imageErrors, setImageErrors] = useState({});

  /* ðŸ”¥ USE ROLE-BASED REDIRECT HOOK */
  useRoleBasedRedirect("customer");

  useEffect(() => {
    const loadData = async () => {
      try {
        const { data: auth } = await supabase.auth.getUser();
        if (!auth?.user) {
          navigate("/login");
          return;
        }

        setUser(auth.user);

        // Fetch customer's cars from backend API
        const carResponse = await fetch(
          `http://localhost:5000/cars/${auth.user.id}`
        );
        const carResult = await carResponse.json();

        if (carResult.success && carResult.data) {
          setCars(carResult.data);
          if (carResult.data.length > 0) {
            setSelectedCar(carResult.data[0].number_plate);
          }
        } else {
          console.warn("âš ï¸ Could not fetch cars");
        }

        setLoading(false);
      } catch (err) {
        console.error("âŒ Error loading data:", err);
        setLoading(false);
      }
    };

    loadData();
  }, [navigate]);

  // Fetch wash history based on selected car
  useEffect(() => {
    const fetchWashHistory = async () => {
      if (!selectedCar) return;

      try {
        setLoading(true);
        const { data: washRecords, error: washError } = await supabase
          .from("car_wash_tracking")
          .select("*")
          .eq("car_number", selectedCar)
          .eq("status", "washed")
          .order("wash_date", { ascending: false });

        if (washError) {
          console.warn("âš ï¸ Could not fetch wash history:", washError);
          setWashHistory([]);
        } else {
          setWashHistory(washRecords || []);
          console.log("âœ… Wash history loaded:", washRecords);
        }
      } catch (err) {
        console.warn("âš ï¸ Error fetching wash history:", err);
        setWashHistory([]);
      } finally {
        setLoading(false);
      }
    };

    fetchWashHistory();
  }, [selectedCar]);

  const handleLogout = async () => {
    await supabase.auth.signOut();
    window.location.href = "/login";
  };

  const handleImageError = (imageKey) => {
    setImageErrors(prev => ({
      ...prev,
      [imageKey]: true
    }));
    console.warn(`âš ï¸ Failed to load image: ${imageKey}`);
  };

  /**
   * Convert Supabase URL to a working Cloudinary URL (if available)
   * Or return the original URL
   */
/**
   * Fixes "Zombie URLs" by replacing old project domains with the current environment's URL.
   */
  const getImageUrl = (imageUrl) => {
    if (!imageUrl) return null;

    // Get your CURRENT active Supabase URL from environment variables
    const currentBaseUrl = import.meta.env.VITE_SUPABASE_URL; 

    // check if the URL is from Supabase storage (any project)
    if (imageUrl.includes("/storage/v1/object/public/")) {
      // Split the URL to get the path after 'public/'
      const pathParts = imageUrl.split("/storage/v1/object/public/");
      
      // If we successfully split it, rebuild it with the CURRENT base URL
      if (pathParts.length > 1) {
        const relativePath = pathParts[1];
        return `${currentBaseUrl}/storage/v1/object/public/${relativePath}`;
      }
    }
    
    return imageUrl;
  };
  if (loading) {
    return (
      <div className="flex items-center justify-center min-h-screen bg-linear-to-br from-slate-50 via-blue-50 to-slate-100">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-linear-to-br from-slate-50 via-blue-50 to-slate-100">
      {/* NAVBAR */}
      <NavbarNew />

      {/* MAIN CONTENT */}
      <main className="max-w-7xl mx-auto px-4 md:px-6 py-10 space-y-8">
        {/* Heading */}
        <div className="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
          <div>
            <h1 className="text-3xl md:text-4xl font-extrabold text-slate-900 flex items-center gap-2">
              <span className="inline-flex items-center justify-center w-10 h-10 rounded-2xl bg-linear-to-br from-blue-600 to-cyan-500 text-white shadow-lg shadow-blue-500/40">
                <FiTruck />
              </span>
              <span>Wash History</span>
            </h1>
            <p className="text-slate-600 text-sm md:text-base mt-2 max-w-xl">
              View detailed records of every wash, including before and after photos for each visit.
            </p>
          </div>
        </div>

        {/* Car Selection Card */}
        <div className="mb-4 bg-white/80 rounded-2xl p-6 shadow-sm border border-slate-200">
          <label className="block text-sm font-semibold text-slate-800 mb-3">
            Select car to view wash history
          </label>
          <div className="flex flex-col sm:flex-row sm:items-center gap-3">
            <select
              value={selectedCar || ""}
              onChange={(e) => setSelectedCar(e.target.value)}
              className="w-full sm:w-80 px-4 py-3 bg-white border border-slate-300 rounded-lg text-sm text-slate-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
              <option value="">-- Select a car --</option>
              {cars.map((car) => (
                <option key={car.id} value={car.number_plate}>
                  {car.brand} {car.model} ({car.number_plate})
                </option>
              ))}
            </select>
          </div>
        </div>

        {/* Wash History List */}
        {washHistory.length === 0 ? (
          <div className="text-center py-16 bg-white/80 rounded-2xl border border-dashed border-slate-300 shadow-sm">
            <FiImage className="mx-auto text-6xl text-slate-300 mb-4" />
            <p className="text-slate-700 text-lg font-semibold">
              No wash history found
            </p>
            <p className="text-slate-500 text-sm mt-2">
              Select a car above or check back once your car has been washed.
            </p>
          </div>
        ) : (
          <div className="grid gap-6">
            {washHistory.map((wash) => (
              <div
                key={wash.id}
                className="bg-white rounded-2xl shadow-md overflow-hidden border border-slate-200 hover:shadow-xl transition"
              >
                {/* Header */}
                <div className="bg-linear-to-r from-blue-600 to-cyan-500 text-white p-6">
                  <div className="flex items-center justify-between gap-4">
                    <div>
                      <h3 className="text-xl md:text-2xl font-bold flex items-center gap-2">
                        <FiCalendar />
                        {new Date(wash.wash_date).toLocaleDateString("en-IN", {
                          weekday: "long",
                          year: "numeric",
                          month: "long",
                          day: "numeric",
                        })}
                      </h3>
                      <p className="text-blue-50 mt-2 text-sm">
                        {wash.car_model} â€¢ {wash.car_number}
                      </p>
                    </div>
                    <span className="px-4 py-2 bg-white/90 text-emerald-700 rounded-full font-semibold text-xs md:text-sm shadow-sm">
                      âœ“ Completed
                    </span>
                  </div>
                </div>

                {/* Images Grid */}
                <div className="p-6 md:p-8 bg-slate-50">
                  {/* Before Wash */}
                  <div className="mb-8">
                    <h4 className="text-base md:text-lg font-bold text-slate-900 mb-4 flex items-center gap-3">
                      <span className="bg-blue-50 text-blue-700 px-3 py-1 rounded-full text-xs md:text-sm font-semibold border border-blue-200">
                        BEFORE WASH
                      </span>
                    </h4>
                    <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                      {[
                        { key: "before_img_1", label: "Photo 1" },
                        { key: "before_img_2", label: "Photo 2" },
                        { key: "before_img_3", label: "Photo 3" },
                        { key: "before_img_4", label: "Photo 4" },
                      ].map((img) => (
                        <div
                          key={img.key}
                          className="bg-white rounded-xl overflow-hidden aspect-square border border-slate-200 hover:border-blue-400 transition group shadow-sm"
                        >
                          {wash[img.key] &&
                          !imageErrors[`${wash.id}_${img.key}`] &&
                          getImageUrl(wash[img.key]) ? (
                            <img
                              src={getImageUrl(wash[img.key])}
                              alt={img.label}
                              className="w-full h-full object-cover group-hover:scale-110 transition cursor-pointer"
                              onClick={() =>
                                window.open(getImageUrl(wash[img.key]), "_blank")
                              }
                              onError={() =>
                                handleImageError(`${wash.id}_${img.key}`)
                              }
                            />
                          ) : (
                            <div className="w-full h-full flex flex-col items-center justify-center bg-slate-100">
                              <FiImage size={40} className="text-slate-300" />
                              <p className="text-xs mt-3 text-slate-400 text-center px-2">
                                Image unavailable
                              </p>
                            </div>
                          )}
                        </div>
                      ))}
                    </div>
                  </div>

                  {/* After Wash */}
                  <div>
                    <h4 className="text-base md:text-lg font-bold text-slate-900 mb-4 flex items-center gap-3">
                      <span className="bg-emerald-50 text-emerald-700 px-3 py-1 rounded-full text-xs md:text-sm font-semibold border border-emerald-200">
                        AFTER WASH
                      </span>
                    </h4>
                    <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                      {[
                        { key: "after_img_1", label: "Photo 1" },
                        { key: "after_img_2", label: "Photo 2" },
                        { key: "after_img_3", label: "Photo 3" },
                        { key: "after_img_4", label: "Photo 4" },
                      ].map((img) => (
                        <div
                          key={img.key}
                          className="bg-white rounded-xl overflow-hidden aspect-square border border-slate-200 hover:border-emerald-400 transition group shadow-sm"
                        >
                          {wash[img.key] &&
                          !imageErrors[`${wash.id}_${img.key}`] &&
                          getImageUrl(wash[img.key]) ? (
                            <img
                              src={getImageUrl(wash[img.key])}
                              alt={img.label}
                              className="w-full h-full object-cover group-hover:scale-110 transition cursor-pointer"
                              onClick={() =>
                                window.open(getImageUrl(wash[img.key]), "_blank")
                              }
                              onError={() =>
                                handleImageError(`${wash.id}_${img.key}`)
                              }
                            />
                          ) : (
                            <div className="w-full h-full flex flex-col items-center justify-center bg-slate-100">
                              <FiImage size={40} className="text-slate-300" />
                              <p className="text-xs mt-3 text-slate-400 text-center px-2">
                                Image unavailable
                              </p>
                            </div>
                          )}
                        </div>
                      ))}
                    </div>
                  </div>
                </div>

                {/* Footer */}
                <div className="bg-white px-6 md:px-8 py-4 border-t border-slate-200">
                  <div className="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
                    <div>
                      <p className="text-[11px] text-slate-500 uppercase">
                        Owner
                      </p>
                      <p className="text-sm font-semibold text-slate-900 mt-1">
                        {wash.car_owner_name || "N/A"}
                      </p>
                    </div>
                    <div>
                      <p className="text-[11px] text-slate-500 uppercase">
                        Car Model
                      </p>
                      <p className="text-sm font-semibold text-slate-900 mt-1">
                        {wash.car_model || "N/A"}
                      </p>
                    </div>
                    <div>
                      <p className="text-[11px] text-slate-500 uppercase">
                        Car Number
                      </p>
                      <p className="text-sm font-semibold text-blue-600 mt-1">
                        {wash.car_number}
                      </p>
                    </div>
                    <div>
                      <p className="text-[11px] text-slate-500 uppercase">
                        Completed At
                      </p>
                      <p className="text-xs text-slate-600 mt-1">
                        {new Date(wash.created_at).toLocaleString("en-IN")}
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        )}
      </main>
    </div>
  );
}
